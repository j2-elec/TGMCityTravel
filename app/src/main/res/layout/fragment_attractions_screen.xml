<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttractionsScreen">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/UpperSection"
        android:layout_width="429dp"
        android:layout_height="176dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/division_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpperSection" />

    <ImageView
        android:id="@+id/attractions_to_main"
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/attraction1"
        android:layout_width="154dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:background="@color/main_background"
        android:fontFamily="@font/mclarenregular"
        android:text="National Theatre"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <Button
        android:id="@+id/attraction2"
        android:layout_width="154dp"
        android:layout_height="62dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="32dp"
        android:background="@color/main_background"
        android:fontFamily="@font/mclarenregular"
        android:text="City Hall"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attraction3" />

    <Button
        android:id="@+id/attraction3"
        android:layout_width="154dp"
        android:layout_height="62dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="32dp"
        android:background="@color/main_background"
        android:fontFamily="@font/mclarenregular"
        android:text="Synagogue"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attraction6" />

    <Button
        android:id="@+id/attraction4"
        android:layout_width="154dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="75dp"
        android:background="@color/main_background"
        android:fontFamily="@font/mclarenregular"
        android:text="Palace of Culture"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attraction5" />

    <Button
        android:id="@+id/attraction5"
        android:layout_width="154dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="75dp"
        android:background="@color/main_background"
        android:fontFamily="@font/mclarenregular"
        android:text="Fortress"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attraction1" />

    <Button
        android:id="@+id/attraction6"
        android:layout_width="154dp"
        android:layout_height="62dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="32dp"
        android:background="@color/main_background"
        android:fontFamily="@font/mclarenregular"
        android:text="Zoo"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="692dp"
        android:fontFamily="@font/neucha"
        android:text="Attractions"
        android:textAlignment="center"
        android:textColor="@color/text_title"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>